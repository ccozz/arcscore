<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Historial de Partidos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <%- include('partials/navbar') %>

  <main class="container mt-5">
    <h1 class="mb-4 text-center">Historial de Partidos</h1>

    <div class="d-flex justify-content-end mb-3">
        <button id="ordenarBtn" class="btn btn-outline-secondary btn-sm">
            Ordenar por fecha üîΩ
        </button>
    </div>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Fecha</th>
          <th>Equipo A</th>
          <th>Equipo B</th>
          <th>Pechera</th>
          <th>Ganador</th>
          <th>Bajas</th>
          <th>Suplentes</th>
          <th>Editar</th>
        </tr>
      </thead>
      <tbody>
        <% historial.forEach((evento, index) => { %>
          <tr data-index="<%= index %>">
            <td><%= new Date(evento.fecha).toLocaleDateString('es-AR') %></td>
            <td><%= evento.equipoA.slice().sort().join(', ') %></td>
            <td><%= evento.equipoB.slice().sort().join(', ') %></td>
            <td><%= evento.pechera === 'A' ? 'Equipo A' : 'Equipo B' %></td>
            <td><%= evento.ganador === 'A' ? 'Equipo A' : 'Equipo B' %></td>
            <td><%= (evento.bajas || []).join(', ') || '-' %></td>
            <td><%= (evento.suplentes || []).join(', ') || '-' %></td>
            <td>
              <a href="/evento/<%= evento.id %>" class="btn btn-sm btn-outline-primary d-none d-md-inline">
                Editar
              </a>
              <a href="/evento/<%= evento.id %>" class="btn btn-sm btn-outline-primary d-md-none" title="Editar">
                ‚úèÔ∏è
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </main>

  <!-- Modo oscuro -->
  <script>
    const root = document.documentElement;
    const modoGuardado = localStorage.getItem('modo');
    if (modoGuardado === 'claro') {
      root.classList.remove('dark-mode');
    } else {
      root.classList.add('dark-mode');
    }
  </script>

  <script>
    const botonOrdenar = document.getElementById('ordenarBtn');
    const filas = Array.from(document.querySelectorAll('tbody tr'));
    const tbody = document.querySelector('tbody');

    // Leer estado previo del orden desde localStorage
    let descendente = localStorage.getItem('ordenHistorial') !== 'asc';

    ordenarFilas(descendente);
    actualizarTextoBoton();

    botonOrdenar.addEventListener('click', () => {
        descendente = !descendente;
        localStorage.setItem('ordenHistorial', descendente ? 'desc' : 'asc');
        ordenarFilas(descendente);
        actualizarTextoBoton();
    });

    function ordenarFilas(desc) {
        const filasOrdenadas = filas.slice().sort((a, b) => {
        const fechaA = new Date(a.querySelector('td').textContent.split('/').reverse().join('-'));
        const fechaB = new Date(b.querySelector('td').textContent.split('/').reverse().join('-'));
        return desc ? fechaB - fechaA : fechaA - fechaB;
        });

        filasOrdenadas.forEach(fila => tbody.appendChild(fila));
    }

    function actualizarTextoBoton() {
        botonOrdenar.innerHTML = `Ordenar por fecha ${descendente ? 'üîΩ' : 'üîº'}`;
    }
  </script>

  <!-- Hamburguesa mobile -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" defer></script>
</body>
</html>