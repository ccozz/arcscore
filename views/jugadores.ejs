<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Estad√≠sticas individuales</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <%- include('partials/navbar') %>

  <main class="container mt-4">
    <h1 class="text-center mb-4">Estad√≠sticas individuales</h1>

    <div class="mb-4">
      <input type="text" id="filtroNombre" class="form-control" placeholder="Filtrar por nombre...">
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% jugadores.forEach(j => { %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title d-flex justify-content-between align-items-center">
                <span><i class="bi bi-person-fill me-1"></i> <%= j.nombre %></span>
                <% if (j.reputacion?.includes("√âlite")) { %>
                  <span class="badge bg-warning text-dark">üåü √âlite</span>
                <% } else if (j.reputacion?.includes("Cumplidor")) { %>
                  <span class="badge bg-success">ü§ù Cumplidor</span>
                <% } else if (j.reputacion?.includes("Ancla")) { %>
                  <span class="badge bg-secondary">‚öìÔ∏è Ancla</span>
                <% } else { %>
                  <span class="badge bg-dark"><%= j.reputacion || "Sin datos" %></span>
                <% } %>
              </h5>

              <ul class="list-group list-group-flush mt-3">
                <li class="list-group-item d-flex justify-content-between">
                  <span><i class="bi bi-calendar3"></i> Partidos:</span>
                  <span><%= j.partidos %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span><i class="bi bi-check-circle-fill text-success"></i> Ganados:</span>
                  <span><%= j.ganados %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span><i class="bi bi-dash-circle-fill text-secondary"></i> Empatados:</span>
                  <span><%= j.empatados %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span><i class="bi bi-x-circle-fill text-danger"></i> Perdidos:</span>
                  <span><%= j.perdidos %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span><i class="bi bi-person-x-fill text-danger"></i> Bajas:</span>
                  <span><%= j.bajas %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span><i class="bi bi-graph-up"></i> Asistencias:</span>
                  <span><%= j.asistencia %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span><i class="bi bi-star-fill text-warning"></i> Puntos:</span>
                  <span><%= j.puntos %></span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </main>

  <script>
    const root = document.documentElement;
    const modoGuardado = localStorage.getItem('modo');
    if (modoGuardado === 'claro') {
        root.classList.remove('dark-mode');
    } else {
        root.classList.add('dark-mode');
    }
  </script>

  <script>
    const inputFiltro = document.getElementById('filtroNombre');
    inputFiltro.addEventListener('input', () => {
      const valor = inputFiltro.value.toLowerCase();
      const cards = document.querySelectorAll('.card');

      cards.forEach(card => {
        const nombre = card.querySelector('.card-title span').textContent.toLowerCase();
        card.parentElement.style.display = nombre.includes(valor) ? 'block' : 'none';
      });
    });
  </script>

  <!-- Bootstrap Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>