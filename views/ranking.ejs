<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>🐀 Torneo Aníbal Rata Coluda</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <%- include('partials/navbar') %>

  <main class="container mt-4">
    <h1 class="text-center">🐀 Torneo Aníbal Rata Coluda 🐀</h1>
    <h2 class="text-center mb-4">🏆 Ranking de Jugadores</h2>

    <div class="table-responsive">
      <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
          <tr>
            <th>#</th>
            <th>Jugador</th>
            <th>Puntos</th>
          </tr>
        </thead>
        <tbody>
            <% jugadores.forEach((j, i) => {
                let rowClass = '';
                let medalla = '';
                if (i === 0) {
                rowClass = 'podio-oro';
                medalla = '🥇';
                } else if (i === 1) {
                rowClass = 'podio-plata';
                medalla = '🥈';
                } else if (i === 2) {
                rowClass = 'podio-bronce';
                medalla = '🥉';
                }
            %>
                <tr class="<%= rowClass %>">
                <td><strong><%= i + 1 %> <%= medalla %></strong></td>
                <td><%= j.nombre %></td>
                <td><%= j.puntos %> pts</td>
                </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
  </main>
</body>
</html>