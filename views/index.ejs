  <!-- Script de Modo -->
  <script>
    const toggle = document.getElementById('modoToggle');
    const root = document.documentElement;

    const modoGuardado = localStorage.getItem('modo');
    if (modoGuardado === 'claro') {
      root.classList.remove('dark-mode');
      toggle.innerHTML = 'ðŸŒž Modo oscuro';
      toggle.classList.remove('btn-outline-light');
      toggle.classList.add('btn-outline-dark');
    } else {
      root.classList.add('dark-mode');
      toggle.innerHTML = 'ðŸŒ™ Modo claro';
      toggle.classList.add('btn-outline-light');
      toggle.classList.remove('btn-outline-dark');
    }

    toggle.addEventListener('click', () => {
      root.classList.toggle('dark-mode');
      const esOscuro = root.classList.contains('dark-mode');
      localStorage.setItem('modo', esOscuro ? 'oscuro' : 'claro');

      toggle.innerHTML = esOscuro ? 'ðŸŒ™ Modo claro' : 'ðŸŒž Modo oscuro';
